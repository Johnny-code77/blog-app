datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Ensure the .env file has a valid MongoDB connection string
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB uses ObjectId as the default ID type
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at") // MongoDB allows mapping fields using @map
}
